body
	#wrap
	.left-col.index
		header
			.logo
				a
				img(src= "img/vesp_logo.png")
					
			nav
				ul
					each val, index in menuObj
						li: a(href=val)= index


	.right-col.index
		.project-filter
			ul(id='filters' class='option-set' data-option-key='filter')   
				li(class='all')
					a(href='#filter=*' class='selected') Все проекты
				li
					a(href='#filter=.this') Текущие	
				li
					a(href='#filter=.future') В развитии	
				li
					a(href='#filter=.past') Реализованные														

		#container  
			.project-list
				ul
					li(class='element this')
